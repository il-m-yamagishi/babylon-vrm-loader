{
    "name": "@m-yamagishi/babylon-vrm-loader",
    "version": "0.1.0",
    "description": "babylon.js VRM Loader",
    "license": "Apache-2.0",
    "author": {
        "email": "akai_inu@live.jp",
        "name": "Masaru Yamagishi",
        "url": "https://github.com/il-m-yamagishi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/il-m-yamagishi/babylon-vrm-loader.git"
    },
    "keywords": [
        "babylon.js",
        "VRM",
        "glTF"
    ],
    "files": [
        "dist/**/*",
        "!dist/test/**/*"
    ],
    "typings": "dist/index.d.ts",
    "main": "dist/index.module.js",
    "devDependencies": {
        "@babylonjs/core": "^7.2.2",
        "@babylonjs/gui": "^7.2.2",
        "@babylonjs/inspector": "^7.2.2",
        "@babylonjs/loaders": "^7.2.2",
        "@babylonjs/serializers": "^7.2.2",
        "babylonjs-gltf2interface": "^7.2.2",
        "typescript": "~5.4.5",
        "vite": "^5.2.11",
        "vite-plugin-externalize-deps": "^0.8.0"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build && tsc",
        "test": "tsc",
        "commit": "npx cz",
        "lint": "biome ci index.ts src/*.ts"
    },
    "sideEffects": [
        "dist/index.js",
        "dist/index.module.js",
        "src/vcast-vci-material-unity.ts",
        "src/vrm-extension.ts",
        "src/vrm-file-loader.ts"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/github",
                {
                    "assets": [
                        [
                            "dist/index.js",
                            "dist/index.module.js"
                        ]
                    ]
                }
            ],
            "@semantic-release/npm",
            "@semantic-release/git"
        ]
    },
    "peerDependencies": {
        "@babylonjs/core": "^7.2.2",
        "@babylonjs/loaders": "^7.2.2",
        "@m-yamagishi/babylon-mtoon-material": "*"
    }
}
